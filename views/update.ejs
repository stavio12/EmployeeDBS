<%- include('Partials/header') -%>

<section class="text-center">
  <div class="container">
    <h1>Update Employee Data</h1>
    <form action="/edit/<%= employee.id %>?_method=PUT" method="POST">
      <input type="hidden" name="_method" value="PUT" />

      <div class="col-8 mx-auto">
        <div class="form-group">
          <label for="exampleInputEmail1">Name</label>
          <input type="text" value="<%= employee.name %>" name="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" />
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <div class="form-group">
          <label for="exampleInputPassword1">Designation</label>
          <input type="text" value="<%= employee.designation %>" name="designation" class="form-control" id="exampleInputPassword1" />
        </div>

        <div class="form-group">
          <label for="exampleInputPassword1">Salary</label>
          <input type="text" value="<%= employee.salary %>" name="salary" class="form-control" id="exampleInputPassword1" />
        </div>

        <button type="submit" class="btn btn-danger btn-block">Update To Database</button>
      </div>
    </form>
  </div>
</section>

<%- include('Partials/footer') -%>
